{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ndumas.com/schemas/post.json",
  "title":"post",
  "description":"properties all notes must have",
  "type":"object",
  "properties": {
    "title": {
      "$ref":"https://ndumas.com/schemas/note.json"
    },
    "date": {
      "type":"date"
    },
    "series": {
      "type": "array",
      "items": {
        "type":"string",
        "uniqueItems": true
      }
    }
  },
  "required": ["title","aliases"]
}
